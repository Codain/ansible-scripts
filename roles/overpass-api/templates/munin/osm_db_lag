#!/usr/bin/env bash

if [[ "$1" = "config" ]]; then
{
  echo 'graph_title Lag to OSM main database'
  echo 'graph_vlabel secondes'
  echo 'graph_category osm'
  echo "osm_db_lag.label osm_base"
  echo "osm_db_lag.warning 300"
  echo "osm_db_lag.critical 3600"
  exit 0
}; fi

DB_DATE=$(date +%s --utc -d "$(cat /{{ overpass_database_dir }}/osm_base_version|sed s/\\\\//g)")
CUR_DATE=$(date -u +%s)
LAG=$(($CUR_DATE - $DB_DATE))

echo "osm_db_lag.value $LAG"
exit 0
